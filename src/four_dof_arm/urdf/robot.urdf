<?xml version="1.0"?>
<robot name="big_4dof_robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- --------------------------------------------------------
       MATERIAL DEFINITIONS
       -------------------------------------------------------- -->
  <material name="GreyMaterial">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="RedMaterial">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>

  <material name="BlueMaterial">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>

  <material name="GreenMaterial">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>

  <material name="WhiteMaterial">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <material name="BlackMaterial">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <!-- --------------------------------------------------------
       ROOT LINK
       -------------------------------------------------------- -->
  <link name="root" />

  <!-- --------------------------------------------------------
       BASE LINK
       -------------------------------------------------------- -->
  <link name="base_link">
    <visual>
      <!-- Slight offset in Z so box is visible above the grid -->
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <geometry>
        <!-- Increase size for better visibility -->
        <box size="0.5 0.5 0.1"/>
      </geometry>
      <material name="GreyMaterial"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <geometry>
        <box size="0.5 0.5 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="root"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- --------------------------------------------------------
       REAR ARM (LINK_1)
       -------------------------------------------------------- -->
  <link name="link_1">
    <visual>
      <!-- Raise it so it appears on top of base_link -->
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <geometry>
        <!-- Thicker and taller cylinder for better visibility -->
        <cylinder radius="0.05" length="0.6"/>
      </geometry>
      <material name="RedMaterial"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <geometry>
        <cylinder radius="0.05" length="0.6"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin rpy="0 0 0" xyz="0 0 0.1"/>
    <!-- Rotate about Z-axis (yaw) -->
    <axis xyz="0 0 1"/>
    <limit effort="50" velocity="1.0" lower="-1.5708" upper="1.5708"/>
  </joint>

  <!-- --------------------------------------------------------
       FOREARM (LINK_2)
       -------------------------------------------------------- -->
  <link name="link_2">
    <visual>
      <!-- Position it to extend out from link_1 -->
      <origin rpy="0 0 0" xyz="0 0 0.4"/>
      <geometry>
        <!-- Longer cylinder for forearm -->
        <cylinder radius="0.05" length="0.8"/>
      </geometry>
      <material name="BlueMaterial"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.4"/>
      <geometry>
        <cylinder radius="0.05" length="0.8"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <!-- Connect to the tip of link_1’s cylinder (length=0.6) -->
    <origin rpy="0 0 0" xyz="0 0 0.6"/>
    <!-- Rotate about Y-axis (pitch) -->
    <axis xyz="0 1 0"/>
    <limit effort="50" velocity="1.0" lower="0.0" upper="1.4835"/>
  </joint>

  <!-- --------------------------------------------------------
       WRIST (LINK_3)
       -------------------------------------------------------- -->
  <link name="link_3">
    <visual>
      <!-- Slight offset to be visible after the forearm -->
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <!-- A box for the wrist block -->
        <box size="0.15 0.15 0.15"/>
      </geometry>
      <material name="GreenMaterial"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <box size="0.15 0.15 0.15"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin rpy="0 0 0" xyz="0 0 0.8"/>
    <!-- Rotate about Y-axis as well -->
    <axis xyz="0 1 0"/>
    <limit effort="50" velocity="1.0" lower="-0.1745" upper="1.5708"/>
  </joint>

  <!-- --------------------------------------------------------
       GRIPPER BASE
       -------------------------------------------------------- -->
  <link name="gripper_base">
    <visual>
      <!-- Slight offset so it’s visible after the wrist -->
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <geometry>
        <!-- A small box for the gripper “palm” -->
        <box size="0.1 0.1 0.02"/>
      </geometry>
      <material name="BlackMaterial"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_4" type="revolute">
    <parent link="link_3"/>
    <child link="gripper_base"/>
    <!-- Attach at the center of the wrist block (0.15/2 ~ 0.075 above) -->
    <origin rpy="0 0 0" xyz="0 0 0.575"/>
    <!-- Another pitch axis, or choose your preferred axis -->
    <axis xyz="0 1 0"/>
    <limit effort="50" velocity="1.0" lower="-1.5708" upper="1.5708"/>
  </joint>

  <!-- --------------------------------------------------------
       GRIPPER FINGER 1
       -------------------------------------------------------- -->
  <link name="gripper_finger_1">
    <visual>
      <!-- Position it to the +X side of the gripper_base box -->
      <origin rpy="0 0 0" xyz="0.05 0 0.1"/>
      <geometry>
        <!-- A thin box to represent the finger -->
        <box size="0.02 0.02 0.1"/>
      </geometry>
      <material name="GreyMaterial"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.05 0 0.1"/>
      <geometry>
        <box size="0.02 0.02 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="finger_joint_1" type="fixed">
    <parent link="gripper_base"/>
    <child link="gripper_finger_1"/>
    <!-- No movement for simplicity (use revolve if you want open/close) -->
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <!-- --------------------------------------------------------
       GRIPPER FINGER 2
       -------------------------------------------------------- -->
  <link name="gripper_finger_2">
    <visual>
      <!-- Position it to the -X side of the gripper_base box -->
      <origin rpy="0 0 0" xyz="-0.05 0 0.1"/>
      <geometry>
        <box size="0.02 0.02 0.1"/>
      </geometry>
      <material name="GreyMaterial"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="-0.05 0 0.1"/>
      <geometry>
        <box size="0.02 0.02 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="finger_joint_2" type="fixed">
    <parent link="gripper_base"/>
    <child link="gripper_finger_2"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

</robot>
